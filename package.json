{
  "name": "@modusoperandi/color-picker",
  "version": "1.0.7",
  "license": "MIT",
  "type": "module",
  "description": "A color picker library",
  "keywords": [],
  "main": "index.js",
  "types": "index.d.ts",
  "style": "styles.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/MO-Movia/licit-color-picker"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@cyclonedx/cyclonedx-npm": "^3.1.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/color": "^4.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.18.0",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-jest": "^28.14.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.34.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-prosemirror": "^3.0.1",
    "jest-sonar-reporter": "^2.0.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "libxmljs2": "^1.0.0"
  },
  "scripts": {
    "build:clean": "rm -rf dist/ && rm -f color-picker-1.0.0-*.*.*.tgz",
    "lint:ts": "eslint src --ext .ts,.tsx --fix",
    "lint:css": "stylelint \"**/*.css\"",
    "lint": "npm run lint:css & npm run lint:ts",
    "ci:build": "tsc --build && copyfiles --up 1 \"src/**/*.css\" dist  && copyfiles package.json LICENSE dist",
    "ci:bom": "cyclonedx-npm --ignore-npm-errors --short-PURLs --output-format XML --output-file dist/bom.xml",
    "test": "jest",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "verify": "npm run lint -- --fix && npm run ci:build && npm run test:coverage && echo 'All Tests Passed!'"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
